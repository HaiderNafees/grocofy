rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Products collection
    match /products/{productId} {
      // Anyone can read products
      allow read: if true;
      // Only admin users can write products
      allow write: if request.auth.token.role == 'admin';
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own profile, admins can read all
      allow read: if request.auth.uid == userId || request.auth.token.role == 'admin';
      // Users can update their own profile (except role), admins can update all
      allow write: if (request.auth.uid == userId && !request.resource.data.diff(resource.data.data).affectedKeys().hasAny(['role', 'createdAt'])) || request.auth.token.role == 'admin';
      // Only admins can create users (except self-registration handled by auth)
      allow create: if request.auth.token.role == 'admin';
    }
    
    // Orders collection
    match /orders/{orderId} {
      // Users can read their own orders, admins can read all
      allow read: if request.auth.uid == resource.data.userId || request.auth.token.role == 'admin';
      // Users can create their own orders, admins can create any
      allow create: if request.auth.uid == request.resource.data.userId || request.auth.token.role == 'admin';
      // Users can update their own orders (limited fields), admins can update all
      allow write: if (request.auth.uid == resource.data.userId && request.resource.data.diff(resource.data.data).affectedKeys().hasOnly(['status'])) || request.auth.token.role == 'admin';
    }
    
    // Categories collection (if needed)
    match /categories/{categoryId} {
      // Anyone can read categories
      allow read: if true;
      // Only admin users can write categories
      allow write: if request.auth.token.role == 'admin';
    }
    
    // Admin settings collection
    match /admin/{documentId} {
      // Only admin users can access admin settings
      allow read, write: if request.auth.token.role == 'admin';
    }
  }
}
